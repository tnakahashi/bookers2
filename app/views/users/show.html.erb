<%= flash[:notice] %>
<main>
  <div class="container">
    <div class="row">  
      <div class="col-md-4" style="background-color: orange;">
        <h1>User info</h1>
          <p><%= image_tag @user.get_profile_image %></p>
          <p>name <%= @user.name %></p>
          <p>introduction <%= @user.introduction %></p>
          <p>
            <%= link_to edit_user_path(@user) , class: 'btn btn-secondary' do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          </p>
        
        <h1>New book</h1>
          <%= form_with model: @book do |f| %>
            <h4>Title</h4>
              <%= f.text_field :title %>
            <h4>Opinion</h4>
              <%= f.text_area :body %>
            <br>
            <%= f.submit 'Create Book' , class: "btn btn-secondary"%>
          <% end %>
      </div>
  
      <div class="col-md-8">
        <table class="table table-striped">
          <thead>
            <h1>Books</h1>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= link_to user_path(book.user_id) do %>
                <p> <%= image_tag book.user.get_profile_image %></p>
              <% end %></td>
              <td><%= link_to book_path(book.id) do %>
                <p><%= book.title %></p>
              <% end %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>


