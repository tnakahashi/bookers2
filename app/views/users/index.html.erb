<header>
  <%= link_to "Bookers", root_path %>
  <%= link_to user_path(current_user.id) do %> 
    <p>Home</p> 
  <% end %>
  <%= link_to user_path(current_user.id) do %> 
    <p>Users</p> 
  <% end %>
  <%= link_to books_path do %> <p>Books</p> <% end %>
  <%= link_to "Log out", destroy_user_session_path, method: :delete %>
</header>

<% @users.each do |user| %>
<div>
  <p>投稿ユーザー画像：<%= image_tag user.get_profile_image %></p>
  <p>ユーザーネーム：<%= user.name %></p>
  <%= link_to user_path(user.id) do %> <p>Show</p> <% end %>
</div>
<% end %>

<h1>User info</h1>
  <p><%= image_tag current_user.get_profile_image %></p>
  <p>name <%= current_user.name %></p>
  <p>introduction <%= current_user.introduction %></p>
  <p><%= link_to "プロフィール編集", edit_user_path(current_user) %></p>

<h1>画像投稿フォーム</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :opinion %>
    <%= f.submit '投稿' %>
  <% end %>
