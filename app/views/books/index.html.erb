<main>
  <%= flash[:notice] %>
  
  
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  
  <div class="container">
    <div class="row">  
      <div class="col-md-3" style="background-color: orange;">
        <h1>User info</h1>
          <p><%= image_tag current_user.get_profile_image %></p>
          <p>name <%= current_user.name %></p>
          <p>introduction <%= current_user.introduction %></p>
          <p>
            <%= link_to edit_user_path(current_user) , class: 'btn btn-secondary' do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          </p>
          
        <h1>New book</h1>
          <%= form_with model: @book do |f| %>
            <h4>Title</h4>
              <%= f.text_field :title %>
            <h4>Opinion</h4>
              <%= f.text_area :body %>
            <br>
            <%= f.submit 'Create Book' , class: "btn btn-secondary"%>
          <% end %>
      </div>
  
      <div class="col-md-8 offset-md-1">
        <table class="table table-striped">
          <thead>
            <h1>Books</h1>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td><%= link_to user_path(book.user_id) do %>
                  <%= image_tag book.user.get_profile_image %>
                <% end %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>

