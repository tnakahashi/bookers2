<main>
  <%= flash[:notice] %>
  <div class="container">
    <div class="row">  
      <div class="col-lg-4" style="background-color: orange;">
        <h1>User info</h1>
          <p><%= image_tag @book.user.get_profile_image %></p>
          <p>name <%= @book.user.name %></p>
          <p>introduction <%= @book.user.introduction %></p>
          <p><%= link_to "プロフィール編集", edit_user_path(current_user) %></p>
        
        <h1>New book</h1>
          <%= form_with model: @book do |f| %>
            <h4>Title</h4>
              <%= f.text_field :title %>
            <h4>Opinion</h4>
              <%= f.text_area :opinion %>
            <br>
            <%= f.submit 'Create Book' , class: "btn btn-secondary"%>
          <% end %>
      </div>
  
      <div class="col-lg-8">
        <table class="table table-striped">
          <thead>
            <h1>Book detail</h1>
          </thead>
          <tbody>
            <tr>
              <td><%= link_to user_path(@book.user_id) do %>
                <%= image_tag @book.user.get_profile_image %>
                <br>
                <%= @book.user.name%>
                <% end %>
              </td>
              
              <td>
                <%= link_to @book.title, book_path(@book.id) %>
              </td>
              
              <td><%= @book.opinion %></td>
              
              <td>
              <% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book.id) , class: "btn btn-secondary"%>
                <%= link_to "Destroy", book_path(@book), method: :delete , class: "btn btn-secondary"%>
              <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>